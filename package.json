{
  "name": "pokedex",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --colors -c e2e/jest.config.js",
    "test:unit": "jest --colors --maxWorkers=3",
    "test:watch": "jest --colors --maxWorkers=3 --watch",
    "test:coverage": "jest --colors --maxWorkers=3 --coverage",
    "lint": "eslint \"src/**/*.{js,ts,html}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,html}\" --fix",
    "format": "prettier \"src/**/*.{ts,html,scss}\" --check",
    "format:fix": "prettier \"src/**/*.{ts,html,scss}\" --write"
  },
  "engines": {
    "node": "^16.14.0 || ^18.10.0  || >= 20.3.0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.9",
    "@angular/cdk": "^17.3.9",
    "@angular/common": "^17.3.9",
    "@angular/compiler": "^17.3.9",
    "@angular/core": "^17.3.9",
    "@angular/forms": "^17.3.9",
    "@angular/material": "^17.3.9",
    "@angular/platform-browser": "^17.3.9",
    "@angular/platform-browser-dynamic": "^17.3.9",
    "@angular/router": "^17.3.9",
    "@ngxs/store": "^3.8.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.6"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.7",
    "@angular-eslint/builder": "^17.4.1",
    "@angular-eslint/eslint-plugin": "^17.4.1",
    "@angular-eslint/eslint-plugin-template": "^17.4.1",
    "@angular-eslint/schematics": "^17.4.1",
    "@angular-eslint/template-parser": "^17.4.1",
    "@angular/cli": "~17.3.7",
    "@angular/compiler-cli": "^17.3.9",
    "@ngxs/devtools-plugin": "^3.8.2",
    "@types/jest": "^29.5.2",
    "@types/jest-environment-puppeteer": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-rxjs": "^5.0.3",
    "jest": "^29.5.0",
    "jest-preset-angular": "^14.0.4",
    "jest-puppeteer": "^9.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.0",
    "typescript": "~5.4.5"
  }
}
